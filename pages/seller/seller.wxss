/*首页轮播图  */
.body{
  width: 100%;
  height: auto;
  background: orange;
}
.banner{
  width: 100%;
  height: 360rpx;
}
/*轮播  */
.swiper-container{
 position: relative;
}
.swiper-container .swiper{
 height: 360rpx;
}
.swiper-container .swiper .img{
 width: 100%;
 height: 100%;
}
.dots{
 position: absolute;
 left: 0;
 right: 0;
 bottom: 20rpx;
 display: flex;
 /* background: #000; */
 width: 238rpx;
 margin: auto;
 border-radius: 10rpx;
 height: 20rpx;
 justify-content: center;
}
.dot{
 margin: 4rpx 8rpx;
 width: 13rpx;
 height: 13rpx;
 background: rgb(255, 255, 255);
 border:rgb(218, 69, 70) solid 1rpx;
 border-radius: 8rpx;
 transition: all .6s;
}
.active{
 /* width: 30rpx; */
 background: #f80;
}
